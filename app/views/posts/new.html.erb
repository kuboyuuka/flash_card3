<h1>新規単語登録画面</h1>
<%= form_with url: posts_create_path do |form| %>
    <p>単語</p>
    <%= form.text_field :word %>
    <p>意味</p>
    <%= form.text_field :mean %>
    <p>類義語</p>
    <%= form.fields_for :synonyms do |synonym| %>
    <%= form.text_field :synonym %>
    <% end %>
    <p>タグ選択</p>
    <%= form.fields_for :posttags do |posttag| %>
    <%= form.select :tag_id, @tags.map{ |tag| [tag.name, tag.id]},{include_blank:true,selected:1} %>
    <%= form.submit %>
    <% end %>
    <br>
    <br>
    <%= link_to("一覧へ戻る","/posts/index")%>

<%end%>
