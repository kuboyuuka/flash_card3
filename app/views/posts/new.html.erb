<h1>新規単語登録画面</h1>
<%= form_tag("/posts/create") do |post| %>

    <p>単語</p>
    <textarea name="word"></textarea>
    <p>意味</p>
    <textarea name="mean"></textarea>
    <p>タグ</p>
    <textarea name="tag"></textarea>
    <input type="submit" value="登録">

<%end%>

<%= form_with model: @post, @tag do |f| %>

  <%= post.text.field :word %>
  <%= post.text.field :mean %>
  <%= tag.fields_for :tag do |image| %>
    <%= tag.file_field :content %>
    <%= image.hidden_field :id, value: image.object.id %> 
  <%= f.submit %>

<% end %>
<% end %>