<%= form_with url: search_path, local:true, method: :get, class: "search-form" do |f| %>
    <%= f.text_field :keyword, placeholder:"検索する", class:"search-input" %>
    <%= f.submit "検索", class: "search-btn" %>
<% end %>
<table>
  <thead>
    <tr>
      <th>タグ</th>
      <th>単語</th>
      <th>意味</th>
      <th>類義語</th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post|%>
  <% post %>
    <tr>
      <td>
      <% @postags = PostTag.where(post_id: post.id) %>
      <% @postags.each do |postag|%>
      <%if postag.tag_id != nil %>
      <%@tags = Tag.where(id: postag.tag_id)%>
      <%@tags.each do |tag|%>
      <%= link_to(tag.name,"/posts/#{post.id}") %>
      <% end %>
      <% end %>
      <% end %>
      </td>
      <td><%= link_to(post.word, "/posts/#{post.id}") %></td>
      <td><%= link_to(post.mean, "/posts/#{post.id}") %></td>
      <td>
      <% @synonym = Synonym.find_by(post_id: post.id) %>
      <%if @synonym != nil%>
      <%= link_to(@synonym.synonym, "/posts/#{post.id}") %>
      <%end%>
      </td>
    </tr>
  <%end%>
  </tbody>
</table>

