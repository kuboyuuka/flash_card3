<%= form_tag("search", method: :get) do %>
    <%= text_field_tag :tag %>
    <%= submit_tag 'search', tag: nil %>
<% end %>
<% @posts.each do |post|%>
<% post %>
<% end %>
<table>
  <thead>
    <tr>
      <th>タグ</th>
      <th>単語</th>
      <th>意味</th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= form_with(model: tag, local:true) do |form| %>
      <%= form.select @tags %>
      </td>
      <td><%= link_to(post.word, "/posts/#{post.id}") %></td>
      <td><%= link_to(post.mean, "/posts/#{post.id}") %></td>
    </tr>
    <%end%>
  </tbody>
</table>

