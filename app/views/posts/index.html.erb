<%= form_tag("search", method: :get) do %>
    <%= text_field_tag :tag %>
    <%= submit_tag 'search', tag: nil %>
<% end %>
<table>
  <thead>
    <tr>
      <th>タグ</th>
      <th>単語</th>
      <th>意味</th>
      <th>類義語</th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post|%>
  <% post %>
    <tr>
      <td><%if @postag != nil %>
      <%= @tag.name%>
      <%end %>
      </td>
      <td><%= link_to(post.word, "/posts/#{post.id}") %></td>
      <td><%= link_to(post.mean, "/posts/#{post.id}") %></td>
      <td><%if @synonym != nil%>
      <%= @synonym.synonym%>
      <%end%>
      </td>
    </tr>
<%end%>
  </tbody>
</table>

<br>
<%= link_to("新規登録","/posts/new")%><br>
<%= link_to("メニューへ戻る","/main")%>