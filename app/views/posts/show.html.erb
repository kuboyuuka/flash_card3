<table>
  <thead>
    <tr>
      <th>タグ</th>
      <th>単語</th>
      <th>意味</th>
      <th>類義語</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%if @tag.name != nil %>
        <%= @tag.name %>
        <% end %>
      </td>
      <td><%= @post.word%></td>
      <td><%= @post.mean%></td>
      <td>
      <%if @synonym.synonym != nil %>
      <%= @synonym.synonym%></td>
      <%end%>
    </tr>
  </tbody>
</table>
<%= link_to("編集","/posts/#{@post.id}/edit")%>
<%= link_to("削除","/posts/#{@post.id}/destroy") %>
<%= link_to("一覧へ戻る","/posts/index")%>