<style type="text/css">
 #self {
     font-color:#ff8c00;
 }
</style>
<h1>ランキング</h1>
<p>お疲れ様でした！<p><br>
<%= "あなたの成績は、#{@denominations}問中 #{@molecule}問正解 正解率#{@car}%で#{@rank}位でした！" %><br>
<table>
  <thead>
    <tr>
      <th>順位</th>
      <th>名前</th>
      <th>正解率</th>
    </tr>
  </thead>
  <tbody>
    <% @rankings.each_with_index do | ranking, inx | %>
        <% inx += 1 %>
        <% if ranking.id == @current_user.id%>
            <div class="self">
                <tr>
                <td>
                <% inx %>
                </td>
                <td><%= ranking.name %></td>
                <td><%= ranking.car %></td>
            </div>
        <% else %>
            <td>
            <% inx %>
            </td>
            <td><%= ranking.name %></td>
            <td><%= ranking.car %></td>
        <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to("メニューへ戻る","/main")%>
